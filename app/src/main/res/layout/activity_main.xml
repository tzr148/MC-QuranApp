<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    `

    <TextView
        android:id="@+id/tvSurah"
        android:layout_width="110dp"
        android:layout_height="38dp"
        android:layout_marginStart="93dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="8dp"
        android:text="Surah No."
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/tvAyat"
        app:layout_constraintEnd_toStartOf="@+id/tnSurah"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <EditText
        android:id="@+id/tnAyat"
        android:layout_width="126dp"
        android:layout_height="51dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="2dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/tvAyat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvAyat"
        app:layout_constraintTop_toBottomOf="@+id/tvSurah" />

    <EditText
        android:id="@+id/tnSurah"
        android:layout_width="129dp"
        android:layout_height="54dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="137dp"
        android:layout_marginBottom="2dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/tvSurah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvSurah"
        app:layout_constraintTop_toTopOf="@+id/tvSurah" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="54dp"
        android:text="Get Verse"
        app:layout_constraintBottom_toTopOf="@+id/tvPara"
        app:layout_constraintEnd_toEndOf="@+id/button2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tvPara"
        app:layout_constraintTop_toBottomOf="@+id/tvAyat" />

    <TextView
        android:id="@+id/tvAyat"
        android:layout_width="105dp"
        android:layout_height="44dp"
        android:layout_marginStart="87dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="24dp"
        android:text="Ayat No."
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toStartOf="@+id/tnAyat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSurah" />

    <TextView
        android:id="@+id/tvPara"
        android:layout_width="137dp"
        android:layout_height="35dp"
        android:layout_marginStart="101dp"
        android:layout_marginBottom="16dp"
        android:text=""
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvAyatDis"
        app:layout_constraintStart_toStartOf="@+id/tvAyatDis"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <TextView
        android:id="@+id/tvAyatDis"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="30dp"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPara" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="20dp"
        android:text="Check Commit"
        app:layout_constraintBottom_toTopOf="@+id/tvSurah"
        app:layout_constraintEnd_toEndOf="@+id/tnSurah"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>